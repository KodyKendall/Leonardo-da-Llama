<div id="message_<%= ((message.sent_to == '4153670657') ? message.sent_from : message.sent_to).parameterize %>" class="message-item">  
  <div class="phone-number">
    <% if message.sent_to == '4153670657' %>
      <%= message.sent_from %>
    <% else %>
      <%= message.sent_to %>
    <% end %>
  </div>
  <div class="message">
    <%= message.body %>
  </div>
  <hr style="border: 1px solid #ccc; margin: 16px 0;">
</div>
